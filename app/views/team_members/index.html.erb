<h1>The Team</h1>
<p>You've reached the TeamMember index. Well done, you.</p> 

<table class="table">
	<tr class="winner">
		<td>Biggest Winner:</td>
		<td class="small"> <%= portrait_link @biggest_winner %> <%= "#{@biggest_winner.firstname}, with #{@biggest_winner.wins.length} wins"%></td>
	</tr>
	<tr class="loser">
		<td>Biggest Loser:</td>
		<td class="small"> <%= portrait_link @biggest_loser %> <%= "#{@biggest_loser.firstname}, with #{@biggest_loser.losses.length} losses"%></td>
	</tr>
	<tr class="winner">
		<td>Best winning streak:</td>
		<td class="small"><%= portrait_link @best_streaker %> <%= "#{@best_streaker.firstname}, with #{@best_streaker.streaks(:wins).length} wins in a row"%></td>
	</tr>
	<tr class="loser">
		<td>Worst losing streak:</td>
		<td class="small"><%= portrait_link @worst_streaker %> <%= "#{@worst_streaker.firstname}, with #{@worst_streaker.streaks(:losses).length} losses in a row"%></td>
	</tr>
	
</table>

<table class="table">
	<tr>
		<th></th>
		<th>Team Member</th>
		<th>Email</th>
	</tr>
	<% @team.each do |member| %>
	<% if member.signed_up? %>
		<tr class="winner">
	<% else %>
		<tr>
	<% end %>
		<td><%= link_to image_tag(member.image_path), team_member_path(member.id) %></td>
		<td>
		<%= link_to member.name, team_member_path(member.id) %>
		</td>
		<td><%= mail_to member.email %></td>
	</tr>
	<% end %>
</table>