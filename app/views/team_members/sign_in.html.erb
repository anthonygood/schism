<h1>Register or sign in.</h1>
<div class="alert-danger alert-dismissable"><%= alert %></div>
<div class="alert-notice"><%= notice %></div>


<form method="post" action="check_user">
	<label for="email">Email address:</label>
	<input class="my-input" type="text" name="email" id="email" placeholder="you"><span class="quipper">@quipper.com</span>
	<label for="password">Password:</label>
	<input class="my-input" type="password" name="password" id="password">
	<br/>
	<input type="submit" class="btn" value="Sign in!">
</form>